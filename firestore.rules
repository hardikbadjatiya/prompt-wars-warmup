rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Players: users can read all, write only their own
    match /players/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Zones: anyone authenticated can read, writes go through backend
    match /zones/{zoneId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side writes via Admin SDK
    }

    // Leaderboard: anyone authenticated can read, write only own entry
    match /leaderboard/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
